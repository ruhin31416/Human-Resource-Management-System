  "bugs": {
    "url": "https://github.com/biprodas/hrm/issues"
  },
  "homepage": "https://github.com/biprodas/hrm#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
